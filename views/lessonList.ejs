<!doctype html>
<html lang="id">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>CerdasCom â€¢ Lessons</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


  <link rel="stylesheet" href="/style/home.css" />
  <link rel="stylesheet" href="/style/lessonsList.css" />

  <script defer src="https://unpkg.com/feather-icons"></script>
</head>

<body class="d-flex flex-column min-vh-100">
  <%- include('partial/_nav') %>


  <main class="container py-4 py-lg-5 flex-grow-1">
    <div class="mb-2">
      <a href="/instructor/courseList" class="text-decoration-none text-muted">
        <i data-feather="arrow-left" width="16"></i> Back to Courses
      </a>
    </div>

    <div class="d-flex align-items-center justify-content-between mb-3">
      <div>
        <h1 class="section-title mb-1">Lessons</h1>
        <div class="text-muted">Kelola lesson untuk <strong><%= lessons.title %></strong></div>
      </div>
      <a href="/lesson/add/<%= lessons.id %>" class="btn btn-primary">
        <i data-feather="plus" width="16"></i> New Lesson
      </a>
    </div>
    <% if (lessons.Lessons.length>0) { %>
    <div class="lessons-card p-3 p-md-4">
      <div class="d-flex align-items-center justify-content-between mb-2">
        <h5 class="mb-0">Semua Lesson</h5>
        <span class="text-muted"><%= lessons.Lessons.length %> items</span>
      </div>
      <div class="table-responsive">
        <table class="table align-middle lessons-table mb-0">
          <thead>
            <tr>
              <th style="width:80px">Order</th>
              <th>Title</th>
              <th style="width:140px">Duration</th>
              <th style="width:140px">Video</th>
              <th style="width:140px">Materi</th>
              <th style="width:250px" class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% lessons.Lessons.forEach(el => { %>
            <tr>
              <td><span class="order-pill"><%= el.section_order %></span></td>
              <td>
                <div class="fw-semibold">Section <%= el.section_order %>: <%= el.section_title %></div>
                <div class="text-muted small"><%= el.title %></div>
              </td>
              <td><%= el.duration %> minute</td>
              <td><a class="badge-chip" target="_blank" href="<%= el.video_url %>">YouTube</a></td>
              <td><a class="badge-chip" target="_blank" href="/files/<%= el.link_materi %>">Materi</a></td>
              <td class="text-end">
                <div class="d-inline-flex gap-1 flex-wrap justify-content-end">
                  <a href="/lesson/edit/<%= el.id %>" class="btn btn-sm btn-outline-secondary"><i data-feather="edit-2" width="14"></i> Edit</a>
                  <a href="/lesson/delete/<%= el.id %>" class="btn btn-sm btn-outline-danger"><i data-feather="trash" width="14"></i> Delete</a>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>
  </main>
  <% if (msg) { %>
  <div class="position-fixed top-0 end-0 p-3" style="z-index:1080">
    <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= msg %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
  <% } %>
  <%- include('partial/_footer') %>
</body>

</html>