<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Panel</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script defer src="https://unpkg.com/feather-icons"></script>

  <link rel="stylesheet" href="/style/home.css" />
  <link rel="stylesheet" href="/style/admin.css" />
</head>

<body>
  <%- include('partial/_nav') %>

  <main class="py-4 py-lg-5">
    <div class="container">

      <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center gap-3">
          <span class="brand-mark d-inline-flex align-items-center justify-content-center rounded">
            <i data-feather="settings" class="text-white" width="18" height="18"></i>
          </span>
          <div>
            <h2 class="mb-0 fw-bold">Admin Panel</h2>
            <div class="text-muted">Kelola role user & data instructor</div>
          </div>
        </div>
      </div>
      <div class="row g-3 mb-4 align-items-stretch">
        <div class="col-12 col-md-4">
          <div class="course-card p-3 p-xl-4 d-flex align-items-center justify-content-between h-100">
            <div>
              <div class="text-muted small">Total Users</div>
              <div class="fs-4 fw-bold"><%= users.length %></div>
            </div>
            <div class="feature-icon"><i data-feather="users"></i></div>
          </div>
        </div>
        <div class="col-12 col-md-4 ms-md-auto">
          <div class="course-card p-3 p-xl-4 d-flex align-items-center justify-content-between h-100">
            <div>
              <div class="text-muted small">Total Instructors</div>
              <div class="fs-4 fw-bold"><%= totalInstructors %></div>
            </div>
            <div class="feature-icon"><i data-feather="award"></i></div>
          </div>
        </div>
      </div>

      <div class="row g-4">
        <div class="col-12 col-xl-7">
          <div class="course-card overflow-hidden">
            <div class="thumb" style="height:120px;">
              <span class="level-badge">Users</span>
            </div>
            <div class="p-3 p-xl-4">
              <div class="text-muted mb-3">Promote/Demote user</div>
              <div class="table-responsive">
                <table class="table align-middle admin-table">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>Email</th>
                      <th>Full name</th>
                      <th>Role</th>
                      <th style="width:170px"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach(el => { %>
                    <tr>
                      <td class="fw-semibold"><%= el.username %></td>
                      <td><%= el.email %></td>
                      <td><%= el.full_name %></td>
                      <td>
                        <span class="badge-soft">
                          <%= el.role %>
                        </span>
                      </td>
                      <td class="text-end">
                        <% if (el.role === 'instructor') { %>
                        <a href="/admin/users/<%= el.id %>/demote" class="btn btn-sm btn-danger">
                          <i data-feather="arrow-down" width="16"></i> Demote
                        </a href="/admin/users/<%= el.id %>/demote">
                        <% } else { %>
                        <a href="/admin/users/<%= el.id %>/promote" class="btn btn-sm btn-primary">
                          <i data-feather="arrow-up-right" width="16"></i> Promote
                        </a href="/admin/users/<%= el.id %>/promote">
                        <% } %>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-xl-5">
          <div class="course-card overflow-hidden">
            <div class="thumb" style="height:120px;background:linear-gradient(135deg,#22c55e,#16a34a);">
              <span class="level-badge">Instructors</span>
            </div>
            <div class="p-3 p-xl-4">
              <div class="text-muted mb-3">Data instructor</div>

              <div class="instructor-list">
                <% instructors.forEach(el => { %>
                <div class="instructor-card">
                  <div class="d-flex align-items-center gap-3">
                    <span class="avatar rounded-circle d-inline-flex align-items-center justify-content-center">
                      <i data-feather="user" width="16"></i>
                    </span>
                    <div>
                      <div class="fw-semibold"><%= el.User.full_name %></div>
                      <div class="text-muted small"><%= el.User.email %></div>
                    </div>
                  </div>

                  <div class="row small text-muted mt-3">
                    <div class="col-4">Work Years<br>
                      <span class="fw-semibold text-body"><%= el.work_years %> yr</span>
                    </div>
                    <div class="col-4">Salary<br>
                      <span class="fw-semibold text-body">
                        <%= formatPrice(el.salary) %>
                      </span>
                    </div>
                    <div class="col-4">Join Date<br>
                      <span class="fw-semibold text-body">
                        <%= formatDate(el.join_date)%>
                      </span>
                    </div>
                  </div>

                  <div class="mt-3 d-flex justify-content-end">
                    <a class="btn btn-sm btn-outline-secondary" href="/admin/instructors/<%= el.id %>/edit">
                      <i data-feather="edit-2" width="16"></i> Edit
                    </a>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
  <% if (msg) { %>
  <div class="position-fixed top-0 end-0 p-3" style="z-index:1080">
    <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= msg %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
  <% } %>
  <%- include('partial/_footer') %>
</body>

</html>