<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Course Review</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script defer src="https://unpkg.com/feather-icons"></script>
  <link rel="stylesheet" href="/style/home.css" />
  <link rel="stylesheet" href="/style/review.css" />
</head>

<body>
  <% error = {} %>
  <% if (errors) { %>
  <% error = getError(errors) %>
  <% } %>
  <section class="rv-hero py-4 border-bottom">
    <div class="container">
      <div class="d-flex align-items-center justify-content-between gap-3">
        <div class="d-flex align-items-center gap-3">
          <a href="/myCourse/<%= user.id %>" class="btn btn-light d-none d-md-inline-flex">
            <i data-feather="arrow-left" class="me-1"></i>
            Back
          </a>
          <div>
            <div class="small text-secondary mb-1">Course Review</div>
            <h2 class="fw-bold mb-0">
              <%= course.title %>
            </h2>
          </div>
        </div>
        <a href="/course" class="btn btn-primary">Browse more courses</a>
      </div>
    </div>
  </section>

  <main class="py-4">
    <div class="container">
      <div class="row g-4">
        <aside class="col-lg-4">
          <div class="rv-card p-3 p-lg-4">
            <h6 class="fw-semibold mb-3">Rating Summary</h6>

            <div class="d-flex align-items-center gap-3 mb-3">
              <div class="rv-score display-5 fw-extrabold"><%= course.avg_rating %></div>
              <div>
                <div class="stars">
                  <% for( let i = 1; i <=5; i++ ) { %>
                  <% if (i<=Math.floor(course.avg_rating)) { %>
                  <i data-feather="star" class="star filled" width="16"></i>
                  <% }else {%>
                  <i data-feather="star" class="star" width="16"></i>
                  <% } %>
                  <% } %>
                </div>

                <div class="small text-secondary"><%= reviews.length %> reviews</div>
              </div>
            </div>

            <div class="rv-dist">
              <div class="rv-dist-row">
                <span class="rv-label">5</span>
                <div class="progress flex-grow-1">
                  <div class="progress-bar" style="width: <%= percentRating['5'] %>%"></div>
                </div>
                <span class="rv-num"><%= percentRating['5'].toFixed(1) %>%</span>
              </div>
              <div class="rv-dist-row">
                <span class="rv-label">4</span>
                <div class="progress flex-grow-1">
                  <div class="progress-bar" style="width: <%= percentRating['4'] %>%"></div>
                </div>
                <span class="rv-num"><%= percentRating['4'].toFixed(1) %>%</span>
              </div>
              <div class="rv-dist-row">
                <span class="rv-label">3</span>
                <div class="progress flex-grow-1">
                  <div class="progress-bar" style="width: <%= percentRating['3'] %>%"></div>
                </div>
                <span class="rv-num"><%= percentRating['3'].toFixed(1) %>%</span>
              </div>
              <div class="rv-dist-row">
                <span class="rv-label">2</span>
                <div class="progress flex-grow-1">
                  <div class="progress-bar" style="width: <%= percentRating['2'] %>%"></div>
                </div>
                <span class="rv-num"><%= percentRating['2'].toFixed(1) %>%</span>
              </div>
              <div class="rv-dist-row">
                <span class="rv-label">1</span>
                <div class="progress flex-grow-1">
                  <div class="progress-bar" style="width: <%= percentRating['1'].toFixed(1) %>%"></div>
                </div>
                <span class="rv-num"><%= percentRating['1'].toFixed(1) %>%</span>
              </div>
            </div>

            <hr class="my-4" />

            <div class="small text-secondary">
              Course by
              <strong><%= course.Instructor.User.full_name %></strong>
              <br />
              Category:
              <span class="badge text-bg-light"><%= course.Category.name %></span>
              <br />
              Duration: <%= course.time %>
            </div>
          </div>
        </aside>


        <section class="col-lg-8">
          <div class="rv-card p-3 p-lg-4 mb-4">
            <h6 class="fw-semibold mb-3">Write a review</h6>
            <form method="post" action=<%=  review ? `/myCourse/review/${enrollmentId}/edit` : `/myCourse/review/${enrollmentId}` %>>
              <div class="mb-3">
                <label class="form-label">Your rating</label>

                <div class="rv-stars-input <%= error.rating ? 'is-invalid' : '' %>">
                  <% for( let i = 5 ;i >0; i-- ) { %>
                  <input type="radio" id="star<%= i %>" name="rating" value="<%= i %>" <%=  review ? review.rating === i ? 'checked' : '' : '' %> />
                  <label for="star<%= i %>" title="<%= i %> stars">★</label>
                  <% } %>
                </div>
                <div class="invalid-feedback"><%= error.rating %></div>
              </div>
              <div class="mb-3">
                <label class="form-label">Your review</label>
                <textarea name="comment" class="form-control <%= error.comment ? 'is-invalid' : '' %>" rows="5" placeholder="Tell others what you liked or what could be improved..."><%=  review ? review.comment : '' %></textarea>
                <div class="invalid-feedback"><%= error.comment %></div>
              </div>

              <div class="d-flex justify-content-between">
                <div class="d-flex gap-2">
                  <% if (review) { %>
                  <button class="btn btn-primary" type="submit">Edit review</button>
                  <% } else { %>
                  <button class="btn btn-primary" type="submit">Submit review</button>
                  <% } %>
                  <a href="/myCourse/<%= user.id %>" class="btn btn-outline-secondary">Cancel</a>
                </div>

                <% if (review) { %>
                <a href="/myCourse/review/<%= enrollmentId %>/delete" class="btn btn-danger" type="submit">Delete review</a>
                <% } %>
              </div>
            </form>
          </div>
          <% reviews.forEach(element => { %>
          <div class="rv-card p-3 p-lg-4 mb-3">
            <div class="d-flex align-items-start gap-3">
              <div class="rv-avatar rounded-circle d-inline-flex align-items-center justify-content-center">
                <%= element.User.full_name[0]  %>
              </div>
              <div class="flex-grow-1">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <div class="fw-semibold"><%= element.User.full_name %></div>
                    <div class="rv-stars-static small">
                      <%= '★'.repeat(element.Review.rating) + '☆'.repeat(5 - element.Review.rating) %></div>
                  </div>
                  <div class="small text-secondary"><%= formatDate(element.Review.updatedAt) %></div>
                </div>
                <p class="mb-2 text-secondary">
                  <%= element.Review.comment  %>
                </p>
              </div>
            </div>
          </div>

          <% }) %>

        </section>
      </div>
    </div>
  </main>
  <% if (msg) { %>
  <div class="position-fixed top-0 end-0 p-3" style="z-index:1080">
    <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= msg %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
  <% } %>
  <%- include('partial/_footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      if (window.feather) window.feather.replace();
    });
  </script>
</body>

</html>