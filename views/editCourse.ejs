<!doctype html>
<html lang="id">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>CerdasCom · Edit Course</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <script defer src="https://unpkg.com/feather-icons"></script>

  <link rel="stylesheet" href="/style/home.css" />
  <link rel="stylesheet" href="/style/addCourse.css" />
</head>

<body>
  <%- include('partial/_nav') %>

  <% error = {} %>
  <% if (errors) { %>
  <% error = getError(errors) %>
  <% } %>

  <section class="container text-center py-5">
    <h1 class="section-title mb-2">Edit Course</h1>
  </section>

  <main class="container pb-5" style="max-width:960px;">
    <div class="card-elev p-4 p-md-5">
      <form action="/instructor/editCourse/<%= findCourse.id %>" method="POST" enctype="multipart/form-data">
        <div class="row g-4">
          <div class="col-12">
            <label class="form-label fw-semibold">Title</label>
            <input type="text" class="form-control <%= error.title ? 'is-invalid' : '' %>" name="title" value="<%= findCourse.title %>">
            <div class="invalid-feedback"><%= error.title %></div>
          </div>

          <div class="col-12">
            <label class="form-label fw-semibold">Description</label>
            <textarea rows="4" class="form-control <%= error.desc ? 'is-invalid' : '' %>" name="description"><%= findCourse.description %></textarea>
            <div class="invalid-feedback"><%= error.desc %></div>
          </div>

          <div class="col-12">
            <label class="form-label fw-semibold mb-1">Upload Gambar</label>
            <input type="file" class="form-control" id="imageFile" name="image_file" accept="image/*">
            <input type="hidden" name="old_image" value="<%= findCourse.image %>">
            <div class="row g-3 align-items-start mt-3">
              <div class="col-md-7">
                <small class="text-muted d-block mb-2">Preview</small>
                <div class="thumb border ratio-16x9" id="thumb" data-src="<%= findCourse.image %>">
                  <span class="text-white fw-semibold" id="thumbHint">Pilih gambar…</span>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12">
            <label class="form-label fw-semibold mb-2">Level</label>
            <div class="d-flex flex-wrap gap-2">
              <div class="pill-option position-relative">
                <input type="radio" name="level" id="lvl-begin" value="Beginner" <%= findCourse.level === 'Beginner' ? 'checked' : '' %>>
                <label for="lvl-begin">Beginner</label>
              </div>
              <div class="pill-option position-relative">
                <input type="radio" name="level" id="lvl-inter" value="Intermediate" <%= findCourse.level === 'Intermediate' ? 'checked' : '' %>>
                <label for="lvl-inter">Intermediate</label>
              </div>
              <div class="pill-option position-relative">
                <input type="radio" name="level" id="lvl-adv" value="Advanced" <%= findCourse.level === 'Advanced' ? 'checked' : '' %>>
                <label for="lvl-adv">Advanced</label>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <label class="form-label fw-semibold">Price (Rp)</label>
            <input type="number" class="form-control <%= error.price ? 'is-invalid' : '' %>" name="price" placeholder="150000" value="<%= findCourse.price %>">
            <div class="invalid-feedback"><%= error.price %></div>
          </div>

          <div class="col-md-6">
            <label class="form-label fw-semibold">Category</label>
            <select class="form-select <%= error.category ? 'is-invalid' : '' %>" name="CategoryId">
              <option value="" disabled> Pilih Category </option>
              <% categories.forEach(el => { %>
              <option value="<%= el.id %>" <%= el.id === findCourse.CategoryId ? 'selected' : '' %>><%= el.name %></option>
              <% }) %>
            </select>
            <div class="invalid-feedback"><%= error.category %></div>
          </div>

          <div class="col-md-6">
            <label class="form-label fw-semibold">Instructor</label>
            <select class="form-select <%= error.instructor ? 'is-invalid' : '' %>" name="InstructorId">
              <option value="" disabled> Pilih Instructor </option>
              <% instructors.forEach(el => { %>
              <option value="<%= el.id %>" <%= el.id === findCourse.InstructorId ? 'selected' : '' %>><%= el.User.full_name %></option>
              <% }) %>
            </select>
            <div class="invalid-feedback"><%= error.instructor %></div>
          </div>

          <div class="col-md-6">
            <label class="form-label fw-semibold">published</label>
            <select class="form-select" name="is_published">
              <option value="true" <%= findCourse.is_published ? 'selected' : '' %>>Published</option>
              <option value="false" <%= findCourse.is_published ? '' : 'selected' %>>Draft</option>
            </select>
          </div>

          <div class="col-12">
            <div class="row g-3">
              <div class="col-md-4">
                <div class="course-card p-3">
                  <div class="text-muted small">Total Duration</div>
                  <div class="fw-semibold">Auto</div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="course-card p-3">
                  <div class="text-muted small">Students Count</div>
                  <div class="fw-semibold">Auto</div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="course-card p-3">
                  <div class="text-muted small">Avg Rating</div>
                  <div class="fw-semibold">Auto</div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 d-flex justify-content-between pt-2">
            <a href="/instructor/courseList" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Course</button>
          </div>
        </div>
      </form>
    </div>
  </main>

  <%- include('partial/_footer') %>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const inputFileElement = document.getElementById('imageFile');
      const previewContainer = document.getElementById('thumb');
      const previewTextElement = document.getElementById('thumbHint');
      const levelBadgeElement = document.getElementById('levelBadge');
      const initialSrc = previewContainer?.dataset?.src;
      if (initialSrc) {
        previewContainer.style.backgroundImage = `url('${initialSrc}')`;
        if (previewTextElement) previewTextElement.style.display = 'none';
      }
      inputFileElement.addEventListener('change', (event) => {
        const selectedFile = event.target.files[0];
        if (!selectedFile) return;
        const fileReader = new FileReader();
        fileReader.onload = () => {
          previewContainer.style.backgroundImage = `url('${fileReader.result}')`;
          if (previewTextElement) previewTextElement.style.display = 'none';
        };
        fileReader.readAsDataURL(selectedFile);
      });
      const levelRadioElements = document.querySelectorAll('input[name="level"]');
      levelRadioElements.forEach(levelRadioElement => {
        levelRadioElement.addEventListener('change', () => {
          if (levelRadioElement.checked && levelBadgeElement) {
            levelBadgeElement.textContent = levelRadioElement.value;
          }
        });
      });

      if (window.feather) {
        feather.replace();
      }
    });
  </script>

</body>

</html>